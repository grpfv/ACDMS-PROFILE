<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFF0EE"
    android:paddingVertical="20dp"
    tools:context=".ToDoActivity">

    <TextView
        android:id="@+id/addTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD TASK"
        android:textColor="#113946"
        android:textStyle="bold"
        android:textSize="34sp"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

    <!-- Task Name -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardtaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addTasks"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="100dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:gravity="center_vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/labelTitle"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif"
                android:text="   TITLE:"
                android:textColor="#113946"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addTask"
                android:layout_width="147dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:hint="Enter Task Name"
                android:textColor="#113946"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Due Day -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardtaskName"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="100dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:gravity="center_vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/labelSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginStart="8dp"
                android:text="SUBJECT:"
                android:textColor="#113946"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addSubject"
                android:layout_width="141dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:hint="Enter Subject Name"
                android:textColor="#113946"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDueDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardSubject"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="100dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:gravity="center_vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/labelDueDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginStart="8dp"
                android:text="DUE DAY:"
                android:textColor="#113946"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addDueday"
                android:layout_width="146dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:focusable="false"
                android:gravity="center"
                android:hint="Set Due Day"
                android:textColor="#113946"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- DUE TIME -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDueTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardDueDay"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="100dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/labelDueTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="   DUE TIME:"
                android:textColor="#113946"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addDueTime"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:focusable="false"
                android:gravity="center"
                android:hint="Set Due Time"
                android:textColor="#113946"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Remind Day -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRemindDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardDueTime"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="100dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:gravity="center_vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/labelRemindDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginStart="8dp"
                android:text="REMIND DAY:"
                android:textColor="#113946"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addRemindday"
                android:layout_width="117dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:focusable="false"
                android:gravity="center"
                android:hint="Set Alarm Day"
                android:textColor="#113946"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Remind TIME -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRemindTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardRemindDay"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="100dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="6dp">

            <TextView
                android:id="@+id/labelRemindTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginStart="8dp"
                android:text="REMIND TIME:"
                android:textColor="#113946"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addRemindTime"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:focusable="false"
                android:gravity="center"
                android:hint="Set Alarm Time"
                android:textColor="#113946"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardRemindTime"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <!-- Add to Timetable Button -->
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardRemindTime"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:text="ADD TASK"
        android:textSize="16dp"
        android:background="@drawable/btnbg"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardRemindTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:background="@drawable/btnbg"
            android:textColor="@color/white"
            android:backgroundTint="#113946"
            android:visibility="gone"
           />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="DELETE"
            android:backgroundTint="#113946"
            android:visibility="gone"
            android:background="@drawable/btnbg"
            android:textColor="@color/white"/>
    </LinearLayout>



</RelativeLayout>
